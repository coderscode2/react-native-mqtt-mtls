{
  "name": "react-native-mqtt-mtls",
  "version": "1.0.2",
  "description": "React Native MQTT client with mTLS (mutual TLS) support and Context Provider pattern for secure, persistent connections",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.tsx",
  "source": "src/index.tsx",
  "files": [
    "src",
    "lib",
    "android",
    "react-native.config.js",
    "!android/build",
    "!android/.gradle",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "test": "jest",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "bootstrap": "yarn example && yarn && yarn example pods"
  },
  "keywords": [
    "react-native",
    "mqtt",
    "mtls",
    "mutual-tls",
    "ssl",
    "tls",
    "android",
    "certificate",
    "secure-mqtt",
    "iot",
    "messaging",
    "pub-sub",
    "mqtt-client",
    "keystore",
    "context-provider"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coderscode2/react-native-mqtt-mtls.git"
  },
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/coderscode2/react-native-mqtt-mtls/issues"
  },
  "homepage": "https://github.com/coderscode2/react-native-mqtt-mtls#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "@react-native-community/eslint-config": "^3.2.0",
    "@types/react": "^18.0.0",
    "@types/react-native": "^0.72.0",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "react": "18.2.0",
    "react-native": "0.72.0",
    "react-native-builder-bob": "^0.23.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">= 16.0.0"
  },
  "packageManager": "yarn@1.22.0",
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "RNMqttMtlsSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.reactnativemqttmtls"
    }
  }
}
